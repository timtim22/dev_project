<h1> Share a Movie </h1>

<% if @movie.errors.any? %>
	<h2> Please correct following errors</h2>
	<ul>
		<% @movie.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for(@movie) do |form| %>
  
  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>