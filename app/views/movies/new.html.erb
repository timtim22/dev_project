<% if user_signed_in? %>

  <%= render 'movies/errors' %>
  <div class= "container p11">
        <h2>Share a Youtube Video</h2>
  </div>
    <div class="card" style="width: 30rem;" >
      <div class="card-body">
          <%= form_for(@movie) do |form| %>
            <form class="px-4 py-3">

              <div class="form-group">
                    <%= form.label :YouTube_URL%>
                    <%= form.text_field :url, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
                <div class="actions">
                  <div class="btn1">
                  <%= form.submit "Share", class: "btn btn-block btn-success" %>
                </div>
              </div>
              
            </form>
          <% end %>
      </div>
    </div>
<% else %>
  <div class="alert alert-warning" style="width: 30rem;" role="alert">
    <p>Please Register or Login to share movies with your friends.</p>
  </div>
<% end %>



















